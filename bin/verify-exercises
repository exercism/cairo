#!/usr/bin/env bash

# Synopsis:
# Test the track's exercises.

# Example: verify all exercises
# ./bin/verify-exercises

# Example: verify single exercise
# ./bin/verify-exercises two-fer

set -eo pipefail

repo=$(git rev-parse --show-toplevel)

slug="${1:-*}"

if [ "$slug" != "*" ]; then
    if [ -d "$repo/exercises/concept/$slug" ]; then
        exercises="exercises/concept/$slug"
    elif [ -d "$repo/exercises/practice/$slug" ]; then
        exercises="exercises/practice/$slug"
    else
        echo "No such exercise: $slug"
        exit 1
    fi
elif [ "$GITHUB_EVENT_NAME" = "pull_request" ]; then
    git fetch --depth=1 origin main
    exercises="$(
        git diff --diff-filter=d --name-only remotes/origin/main |
            grep "exercises/" |
            cut --delimiter '/' --fields -3 |
            sort --unique || true
    )"
else
    exercises="exercises/*/*"
fi

for exercise_path in $exercises; do
    cd "$repo"

    exercise=$(basename "$exercise_path")

    if [ ! -s "$exercise_path/Scarb.toml" ]; then
        echo "Exercise $exercise is just a stub, skipping"
        continue
    fi

    echo "Checking $exercise exercise"

    # Check if custom.skipStubVerification is set to true
    skip_build_tests=false
    if [[ -f "$exercise_path/.meta/config.json" ]]; then
        skip_stub_verification=$(jq -r '.custom.skipStubVerification // false' "$exercise_path/.meta/config.json" 2>/dev/null)
        if [[ "$skip_stub_verification" = "true" ]]; then
            skip_build_tests=true
        fi
    fi

    tmp_dir=$(mktemp -d)
    trap 'rm -rf $tmp_dir' EXIT INT TERM

    cp ".tool-versions" "$tmp_dir"

    # copy the exercise to the temporary directory
    contents_to_copy=(
        "src"
        "tests"
        "Scarb.toml"
    )
    for c in "${contents_to_copy[@]}"; do
        if [ ! -e "$exercise_path/$c" ]; then
            echo "Missing exercise file: $c"
            exit 1
        fi
        cp -r "$exercise_path/$c" "$tmp_dir"
    done

    cp "$repo/.tool-versions" "$tmp_dir"

    cd "$tmp_dir"

    # test that the scaffold + tests combination compiles (unless skipped)
    if [[ "$skip_build_tests" = false ]]; then
        echo "Verifying stub"
        
        # Find the test file and add #[ignore] after the first #[test]
        test_file=$(find tests -name "*.cairo" -type f | head -n 1)
        if [ -n "$test_file" ]; then
            # Use sed to add #[ignore] after the first occurrence of #[test]
            sed -i '0,/#\[test\]/{s/#\[test\]/#[test]\n#[ignore]/}' "$test_file"
        fi
        
        # allow only error output to be printed
        timeout 20 scarb cairo-test --test-kind integration 2>&1 | { 
            output=$(cat); 
            if [[ $? -eq 124 ]]; then 
                echo "$exercise timed out" && exit 1; 
            elif echo "$output" | grep -q "could not compile" || ! echo "$output" | grep -q "test result: ok\."; then 
                # scarb prints error output just as if it was success output, so we need to grep the error
                echo "$output" && exit 1; 
            fi; 
        }
    else
        echo "Skipping verifying stub (custom.skipStubVerification: true)"
    fi

    echo "Verifying the example solution"

    # Copy solution files to where Cargo expects them
    if [ -f "$repo/$exercise_path/.meta/example.cairo" ]; then
        cp -f "$repo/$exercise_path/.meta/example.cairo" "$tmp_dir/src/lib.cairo"
    elif [ -f "$repo/$exercise_path/.meta/exemplar.cairo" ]; then
        cp -f "$repo/$exercise_path/.meta/exemplar.cairo" "$tmp_dir/src/lib.cairo"
    else
        echo "Could not locate example implementation for $exercise_path"
        exit 1
    fi

    # Exercism sets a timeout limit for tests
    timeout 20 scarb cairo-test --include-ignored --test-kind integration || (echo "$exercise timed out" && exit 1)

    rm -rf "$tmp_dir"
done
